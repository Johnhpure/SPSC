PORT=3000
MOCK_MODE=false

# Gemini API 配置
GEMINI_API_KEY=mock-gemini-key
GEMINI_DEFAULT_TEXT_MODEL=gemini-2.0-flash
GEMINI_DEFAULT_IMAGE_MODEL=imagen-3.0-generate-002
GEMINI_DEFAULT_VISION_MODEL=gemini-2.0-flash

# 性能配置
GEMINI_MAX_CONCURRENT_REQUESTS=10
GEMINI_REQUEST_TIMEOUT=30000
GEMINI_MAX_RETRIES=3

# 缓存配置
GEMINI_CACHE_ENABLED=true
GEMINI_CACHE_TTL=3600

# 日志配置
LOG_LEVEL=info

# 加密配置（用于 API Key 等敏感数据加密）
ENCRYPTION_SECRET=your_secret_key_change_in_production_32chars_minimum

# MySQL 数据库配置
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=
